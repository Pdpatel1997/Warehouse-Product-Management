@model FirstAppRecall.Models.Product
@{
    ViewBag.Title = "Create Product";
}

<h2>Create Product</h2>
<form method="post" action="/products/create">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="ProductName">Product Name</label>
            <input type="text" class="form-control" id="ProductName" name="ProductName" />
            @Html.ValidationMessageFor(s=>s.ProductName)
        </div>
        <div class="form-group col-md-6">
            <label for="Price">Price</label>
            <input type="text" class="form-control" id="Price" name="Price" />
            @Html.ValidationMessageFor(s => s.Price)
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="DateOfPurchase">Date of Purchase</label>
            <input type="text" class="form-control" id="DateOfPurchase" name="DateOfPurchase" />
            @Html.ValidationMessageFor(s => s.DateOfPurchase)
        </div>
        <div class="form-group col-md-6">
            <label for="AvailabilityStatus">Availability Status</label>
            <select type="text" class="form-control" id="AvailabilityStatus" name="AvailabilityStatus">
                <option value="">Select Availability Status</option>
                <option value="InStock">In Stock</option>
                <option value="Out of stock">Out of Stock</option>

            </select>
            @Html.ValidationMessageFor(s => s.AvailabilityStatus)
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="CategoryID">Category</label>
            <Select type="text" class="form-control" id="CategoryID" name="CategoryID">
                <option>Please Select Caregory</option>
                @foreach (var item in ViewBag.Cat)
                {
                    <option value="@item.CategoryID">@item.CategoryName</option>
                }
            </Select>
            @Html.ValidationMessageFor(s => s.CategoryID)
        </div>
        <div class="form-group col-md-6">
            <label for="BrnadID">Brand</label>
            <select type="text" class="form-control" id="BrandID" name="BrandID">
                <option>Please select Brnad</option>
                @foreach (var item in ViewBag.Brand)
                {
                    <option value="@item.BrandID">@item.BrandName</option>
                }
            </select>
            @Html.ValidationMessageFor(s => s.BrandID)
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="active" />
            <label for="active" class="form-check-label">Active</label>
        </div>
    </div>
    @Html.ValidationSummary()
    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-danger" href="/products/index">Cancel</a>
</form>

