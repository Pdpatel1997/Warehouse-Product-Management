@model FirstAppRecall.Models.Product
@{
    ViewBag.Title = "Delete Product";
}
<h2>Delete Product</h2>

<form method="post" action="/products/Delete">
    <input type="hidden" value="@Model.ProductID" name="ProductID" readonly="readonly" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="ProductName">Product Name</label>
            <input type="text" class="form-control" id="ProductName" name="ProductName" value="@Model.ProductName" readonly="readonly"/>
        </div>
        <div class="form-group col-md-6">
            <label for="Price">Price</label>
            <input type="text" class="form-control" id="Price" name="Price" value="@Model.Price"readonly="readonly" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="DateOfPurchase">Date of Purchase</label>
            <input type="text" class="form-control" id="DateOfPurchase" name="DateOfPurchase" value="@Model.DateOfPurchase" readonly="readonly"/>
        </div>
        <div class="form-group col-md-6">
            <label for="AvailabilityStatus">Availability Status</label>
            <input type="text" class="form-control" id="AvailabilityStatus" name="AvailabilityStatus" @Model.AvailabilityStatus readonly="readonly"/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="CategoryID">CategoryID</label>
            <input type="text" class="form-control" id="CategoryID" name="CategoryID" value="@Model.CategoryID" readonly="readonly"/>
        </div>
        <div class="form-group col-md-6">
            <label for="BrnadID">BrnadID</label>
            <input type="text" class="form-control" id="BrnadID" name="BrnadID" value="@Model.BrandID" readonly="readonly"/>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="active" />
            <label for="active" class="form-check-label">Active</label>
        </div>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-primary" href="/products/index">Cancel</a>

</form>

